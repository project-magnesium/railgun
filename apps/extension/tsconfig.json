{
    "extends": "tsconfig/base.json",
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "allowJs": false,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "module": "ESNext",
        "resolveJsonModule": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "types": ["chrome"]
    },
    "include": ["src"],
    "references": [{ "path": "./tsconfig.node.json" }]
}
